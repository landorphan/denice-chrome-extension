{
    "manifest_version": 3,
    "name": "Denice.ai",
    "description": "Denice.ai helps users summarize and store web documents into their personal store for later search and retrieval.",
    "version": "0.0.1.1",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "https://www.nuevco.com/*",
        "https://www.dev.nuevco.com/*"
    ],
    "icons": {
        "16": "assets/denice16.png",
        "32": "assets/denice32.png",
        "48": "assets/denice48.png",
        "128": "assets/denice128.png"
    }
}
