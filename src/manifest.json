{
    "manifest_version": 3,
    "name": "Denice.ai Chrome Extension",
    "description": "Denice AI Chrome Extension",
    "version": "0.0.1.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"],
            "run_at": "document_idle"  
        }
    ],
    "icons": {
        "16": "assets/denice16.png",
        "48": "assets/denice48.png",
        "128": "assets/denice128.png"
    }
}
